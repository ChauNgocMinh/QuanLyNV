<Window x:Class="QuanLyNhanVien.ThongBao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh sách Thông báo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgThongBao" AutoGenerateColumns="False" 
                  ItemsSource="{Binding ThongBaoList}" 
                  Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã thông báo" Binding="{Binding MaTB}" Width="100"/>
                <DataGridTextColumn Header="Nội dung" Binding="{Binding NoiDung}" Width="300"/>
                <DataGridTextColumn Header="Loại" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Ngày gửi" Binding="{Binding CreateDate}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
