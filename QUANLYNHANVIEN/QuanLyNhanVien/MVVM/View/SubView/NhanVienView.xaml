<UserControl x:Name="quanLyNhanVien" x:Class="QuanLyNhanVien.MVVM.View.SubView.NhanVienView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyNhanVien.MVVM.View.SubView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent" KeyDown="quanLyNhanVien_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Thông tin chi tiết"
                      BorderThickness="0"
                      FontSize="17"
                      FontWeight="SemiBold" Height="120" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="59*"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="59*"/>
                    <ColumnDefinition Width="58"/>
                    <ColumnDefinition Width="70*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" FontWeight="Normal" FontSize="14" 
                           Margin="0,0,10,0" Text="Phòng" TextAlignment="Right" VerticalAlignment="Center" Height="19"/>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" FontWeight="Normal" FontSize="14" 
                           Margin="0,0,10,0" Text="Bộ phận" TextAlignment="Right" VerticalAlignment="Center" Height="19"/>
                <TextBlock Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" FontWeight="Normal" FontSize="14" 
                           Margin="0,0,10,0" Text="Họ Tên" TextAlignment="Right" VerticalAlignment="Center" Height="19"/>

                <ComboBox Grid.Row="0" x:Name="phongCbx" Grid.RowSpan="2" Grid.Column="3" IsReadOnly="True"
                      FontSize="17" FontWeight="Normal"/>
                <ComboBox Grid.Row="0" x:Name="boPhanCbx" Grid.RowSpan="2" Grid.Column="1" SelectionChanged="boPhanCbx_SelectionChanged" IsReadOnly="True"
                      FontSize="17" FontWeight="Normal"/>
                <TextBox Grid.Row="0" x:Name="tenNVTbx" Grid.RowSpan="2"   Style="{StaticResource InputTextBox}" Grid.Column="5" Height="32" VerticalAlignment="Center" KeyDown="tenNVTbx_KeyDown"/>

                <Button x:Name="locBtn" Grid.Column="6" Grid.Row="0"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="40" Height="40" Click="locBtn_Click" Grid.RowSpan="2"
                        HorizontalAlignment="Right">
                    <Image Height="20"
                        Source="/MVVM/View/SubView/icons8-funnel-64.png"/>
                </Button>
            </Grid>

        </GroupBox>

        <DataGrid x:Name="dsNhanVienDtg" Grid.Row="1"
          ItemsSource="{Binding Path=DefaultView}"
          Margin="0,0,0,20"
          IsReadOnly="True"
          SelectionChanged="dsNhanVienDtg_SelectionChanged" 
          MouseDoubleClick="dsNhanVienDtg_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding Chọn}" Width="70" />

                <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding Mã nhân viên}" Width="100" />
                <DataGridTextColumn Header="Mã phòng" Binding="{Binding Mã phòng}" Width="100" />
                <DataGridTextColumn Header="Mã lương" Binding="{Binding Mã lương}" Width="100" />
                <DataGridTextColumn Header="Họ tên" Binding="{Binding Họ tên}" Width="200" />
                <DataGridTextColumn Header="Ngày sinh" Binding="{Binding Ngày sinh}" Width="120" />
                <DataGridTextColumn Header="Giới tính" Binding="{Binding Giới tính}" Width="100" />
                <DataGridTextColumn Header="Dân tộc" Binding="{Binding Dân tộc}" Width="100" />
                <DataGridTextColumn Header="CMND-CCCD" Binding="{Binding CMND-CCCD}" Width="150" />
                <DataGridTextColumn Header="Nơi cấp" Binding="{Binding Nơi cấp}" Width="150" />
                <DataGridTextColumn Header="Chức vụ" Binding="{Binding Chức vụ}" Width="150" />
                <DataGridTextColumn Header="Mã loại nhân viên" Binding="{Binding Mã loại nhân viên}" Width="150" />
                <DataGridTextColumn Header="Loại hợp đồng" Binding="{Binding Loại hợp đồng}" Width="150" />
                <DataGridTextColumn Header="Thời gian hợp đồng" Binding="{Binding Thời gian hợp đồng}" Width="150" />
                <DataGridTextColumn Header="Ngày ký hợp đồng" Binding="{Binding Ngày ký hợp đồng}" Width="150" />
                <DataGridTextColumn Header="Ngày hết hạn" Binding="{Binding Ngày hết hạn}" Width="150" />
                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding Số điện thoại}" Width="120" />
                <DataGridTextColumn Header="Học vấn" Binding="{Binding Học vấn}" Width="150" />
                <DataGridTextColumn Header="Ghi chú" Binding="{Binding Ghi chú}" Width="200" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Style="{StaticResource WindowButtonTheme}"
                    Width="NaN" Height="40"
                    x:Name="themBtn"
                    Click="themBtn_Click" Margin="0,5,40,5">Thêm nhân sự</Button>
            <Button x:Name="xoaBtn" 
                    Style="{StaticResource WindowButtonTheme}"
                    Width="NaN" Height="40" Click="xoaBtn_Click" Grid.ColumnSpan="2" Margin="140,5,70,5">Xóa nhân sự</Button>
            <Button Grid.Column="1"
                    x:Name="SuaNhanSuBtn"
                    Click="suaBtn_Click"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="100" Height="40" Grid.ColumnSpan="2" Margin="113,5,107,5">Sửa nhân sự</Button>
            <Button x:Name="xuatDSBtn" Grid.Column="3"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="100" Height="40" Click="xuatDSBtn_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0">Xuất ra excel</Button>
            <Button x:Name="lamMoiBtn" Grid.Column="2"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="100" Height="40"
                    Click="lamMoiBtn_Click" HorizontalAlignment="Left" Margin="80,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2">Làm mới</Button>
            <Button Style="{StaticResource WindowButtonTheme}"
                Width="NaN" Height="40"
                x:Name="themBtn_Copy"
                Click="guiTBBtn_Click" Margin="16,5,16,5" Grid.Column="4">Gửi thông báo</Button>

        </Grid>


    </Grid>
</UserControl>
